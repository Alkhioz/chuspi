{
    "manifest_version": 2,
    "name": "Chuspi",
    "description": "Screen recorder",
    "version": "0.0.0.1",
    "author": "Alejandro Mendoza",
    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "js": [
            "js/content.js"
        ]
    }],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}